<!-- Web3 Connect Wallet Section -->
<div class="container mx-auto px-4 py-16">
  <h2 class="text-3xl font-bold text-center mb-6">
    Web3 Integration
  </h2>
  <p class="text-center text-gray-300 mb-8">
    Connect your Ethereum wallet and explore blockchain capabilities.
  </p>
  
  <div class="flex justify-center">
    <button
      id="connectWalletBtn"
      class="bg-purple-600 hover:bg-purple-500 text-white px-6 py-3 rounded transition"
    >
      Connect Wallet
    </button>
  </div>

  <div class="mt-6 text-center" id="walletAddress" style="display: none;">
    <p class="text-gray-200">
      Connected address: <span id="addrText" class="font-semibold"></span>
    </p>
  </div>
</div>

<script>
  // Basic Connect Wallet script
  const connectWalletBtn = document.getElementById('connectWalletBtn');
  const walletAddressDiv = document.getElementById('walletAddress');
  const addrTextSpan = document.getElementById('addrText');

  connectWalletBtn.addEventListener('click', async () => {
    if (typeof window.ethereum !== 'undefined') {
      try {
        const accounts = await window.ethereum.request({ method: 'eth_requestAccounts' });
        const account = accounts[0];
        addrTextSpan.textContent = account;
        walletAddressDiv.style.display = 'block';
      } catch (err) {
        console.error('User rejected or error occurred:', err);
      }
    } else {
      alert('MetaMask not detected. Please install or enable it.');
    }
  });
</script>