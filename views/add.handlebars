<div class="container mx-auto px-4 py-20">
  <h1 class="text-3xl font-bold mb-8">Post a New Job</h1>

  <div class="max-w-3xl bg-gray-800 p-8 rounded">
    <h2 class="text-xl font-semibold mb-6">Fill out the details</h2>

    <form action="/jobs/add" method="POST" class="space-y-4">
      <div>
        <label for="title" class="block mb-1 font-semibold">Job Title</label>
        <input
          type="text"
          id="title"
          name="title"
          placeholder="Enter the job title"
          required
          class="w-full bg-gray-700 border border-gray-600 rounded
                 px-3 py-2 text-gray-100 placeholder-gray-400
                 focus:outline-none"
        />
      </div>

      <div>
        <label for="description" class="block mb-1 font-semibold">
          Job Description
        </label>
        <textarea
          id="description"
          name="description"
          placeholder="Describe the role and responsibilities"
          required
          class="w-full bg-gray-700 border border-gray-600
                 rounded px-3 py-2 text-gray-100
                 placeholder-gray-400 focus:outline-none"
        ></textarea>
      </div>

      <div>
        <label for="company" class="block mb-1 font-semibold">Company</label>
        <input
          type="text"
          id="company"
          name="company"
          placeholder="Company name"
          required
          class="w-full bg-gray-700 border border-gray-600
                 rounded px-3 py-2 text-gray-100
                 placeholder-gray-400 focus:outline-none"
        />
      </div>

      <div>
        <label for="email" class="block mb-1 font-semibold">Contact Email</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Your contact email"
          required
          class="w-full bg-gray-700 border border-gray-600
                 rounded px-3 py-2 text-gray-100
                 placeholder-gray-400 focus:outline-none"
        />
      </div>

      <div>
        <label for="salary" class="block mb-1 font-semibold">Salary</label>
        <input
          type="text"
          id="salary"
          name="salary"
          placeholder="Offered salary"
          required
          class="w-full bg-gray-700 border border-gray-600
                 rounded px-3 py-2 text-gray-100
                 placeholder-gray-400 focus:outline-none"
        />
      </div>

      <!-- hidden field for "new_job" -->
      <input type="hidden" name="new_job" value="1" />

      <button
        type="submit"
        class="bg-blue-600 hover:bg-blue-500 text-white 
               font-bold py-2 px-4 rounded transition"
      >
        Submit
      </button>
    </form>
  </div>
</div>