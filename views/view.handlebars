<!-- VIEW.HANDLEBARS -->

<div class="container mx-auto px-4 py-20">
  <a
    href="/jobs"
    class="inline-block mb-8 bg-blue-600 hover:bg-blue-500
           text-white px-4 py-2 rounded transition"
  >
    Back to Jobs
  </a>

  <div class="bg-gray-800 p-8 rounded">
    <div class="flex flex-col items-center mb-8">
      <img
        src="/img/company.svg"
        alt="Company"
        class="w-24 h-24 mb-4"
      />
      <h1 class="text-3xl font-bold mb-2 text-blue-400">
        {{job.dataValues.title}}
      </h1>
    </div>

    <p class="mb-4">
      <span class="font-semibold">Company:</span>
      <span class="text-blue-400">{{job.dataValues.company}}</span>
    </p>
    <p class="mb-4">
      <span class="font-semibold">Salary:</span>
      ${{job.dataValues.salary}}
    </p>

    <p class="font-semibold mb-1">Description:</p>
    <p class="mb-6 text-gray-300">
      {{job.dataValues.description}}
    </p>

    <p>
      <span class="font-semibold">Contact Email:</span>
      <a
        href="mailto:{{job.dataValues.email}}"
        class="text-blue-400 hover:underline"
      >
        {{job.dataValues.email}}
      </a>
    </p>
  </div>
</div>