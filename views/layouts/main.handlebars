<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Job Finder</title>
    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body 
    class="min-h-screen flex flex-col 
           bg-gradient-to-b from-[#0f0e13] to-[#1d1d2e] 
           text-gray-100"
  >
    <!-- Navbar -->
    <header class="px-4 py-4 border-b border-gray-800 flex justify-between items-center">
      <!-- Brand -->
      <a class="text-xl font-bold" href="/">Job Finder</a>

      <!-- Nav Menu -->
      <nav class="flex items-center space-x-4">
        <!-- Home link -->
        <a class="hover:text-blue-400 transition" href="/">
          Home
        </a>
        <!-- View Jobs link -->
        <a class="hover:text-blue-400 transition" href="/jobs">
          View Jobs
        </a>
        <!-- Post a Job link -->
        <a 
          class="bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded transition" 
          href="/jobs/add"
        >
          Post a Job
        </a>
        <!-- Connect Wallet button -->
        <button
          id="connectWalletBtn"
          class="bg-purple-600 hover:bg-purple-500 text-white px-4 py-2 rounded transition"
        >
          Connect Wallet
        </button>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-1">
      {{{ body }}}
    </main>

    <!-- Footer -->
    <footer class="text-gray-500 text-sm p-4 text-center border-t border-gray-800">
      Â© 2025 Job Finder - All rights reserved
    </footer>

    <!-- Script: Connect Wallet -->
    <script>
      const connectWalletBtn = document.getElementById('connectWalletBtn');
      connectWalletBtn?.addEventListener('click', async () => {
        if (typeof window.ethereum !== 'undefined') {
          try {
            const accounts = await window.ethereum.request({ method: 'eth_requestAccounts' });
            const account = accounts[0];
            alert('Connected: ' + account);
          } catch (err) {
            console.error('User rejected or error:', err);
          }
        } else {
          alert('MetaMask not detected. Please install or enable it.');
        }
      });
    </script>
  </body>
</html>